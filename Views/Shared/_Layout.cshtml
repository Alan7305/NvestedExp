@helper DisplayMenu(string icon)
{
    if (icon.ToUpper() == ViewBag.Title.ToUpper()) {
        @Html.Raw("active")
    }
}
<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>NvestedExp</title>

    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">
    <!-- Custom styles for this template -->
    <link rel="stylesheet" href="http://fontawesome.io/assets/font-awesome/css/font-awesome.css">
    <link rel="stylesheet" href="~/Content/Site.css">

    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous"></script>
</head>
<body>
    <header>
        <!-- Top bar -->
        <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark" style="padding:4px;">
            <a class="navbar-brand" href="#" style="padding-left:10px;color:cyan;">Nvested<font class="text-white" style="font-size:10px;">Expression</font></a>
            <div class="collapse navbar-collapse" id="navbarsExampleDefault">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Settings</a>
                    </li>
                </ul>
                <div class="nav-item float-right">
                    <button type="button" class="btn btn-success">
                        airtickets <span class="badge badge-light">2</span>
                    </button>
                    <button type="button" class="btn btn-warning">
                        stocks <span class="badge badge-light">2</span>
                    </button>
                    <button type="button" class="btn btn-danger">
                        stocks <span class="badge badge-light">1</span>
                    </button>
                </div>
            </div>
        </nav>
    </header>

    <!-- Menu -->
    <div>
        <div>
            <nav class="bg-light sidebar">
                <ul class="nav nav-pills flex-column">
                    <li class="nav-item" title="close bar">
                        <button type="button" class="btn btn-dark button" disabled>
                            <i class="fa fa-bars" aria-hidden="true"></i>
                        </button>
                    </li>
                    <li class="nav-item" title="message">
                        <a href="#" class="btn btn-light button rounded-circle disabled @DisplayMenu("message")" role="button">
                            <i class="fa fa-bullhorn" aria-hidden="true"></i>
                        </a>
                    </li>
                    <li class="nav-item" title="stocks">
                        <a href="#" class="btn btn-light button rounded-circle disabled @DisplayMenu("stocks")" role="button">
                            <i class="fa fa-line-chart" aria-hidden="true"></i>
                        </a>
                    </li>
                    <li class="nav-item" title="airtickets">
                        <a href="/Airtickets/Index" class="btn btn-light button rounded-circle @DisplayMenu("airtickets")" role="button">
                            <i class="fa fa-plane" aria-hidden="true"></i>
                        </a>
                    </li>
                    <li class="nav-item" title="investment analyst">
                        <a href="#" class="btn btn-light button rounded-circle disabled @DisplayMenu("investment analyst")" role="button">
                            <i class="fa fa-diamond" aria-hidden="true"></i>
                        </a>
                    </li>
                    <li class="nav-item" title="crawler">
                        <a href="/Crawler/Index" class="btn btn-light button rounded-circle @DisplayMenu("crawler")" role="button">
                            <i class="fa fa-bug" aria-hidden="true"></i>
                        </a>
                    </li>
                    <li class="nav-item" title="info">
                        <a href="#" class="btn btn-light button rounded-circle disabled @DisplayMenu("info")" role="button">
                            <i class="fa fa-info" aria-hidden="true"></i>
                        </a>
                    </li>
                </ul>
            </nav>
            @RenderBody()
        </div>
    </div>

</body>
</html>